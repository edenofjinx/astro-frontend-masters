---
import Layout from '../layouts/default.astro';
import ShopItems from '../components/shop-items.astro';
---

<Layout>
	<div class="shop">
		<h1>Shop for sandwich kits</h1>
		<noscript>
			<p>Javascript is disabled. Please enable Javascript in order to use the shop</p>
		</noscript>

		<div class="products">
			<ShopItems />
		</div>
	</div>
</Layout>

<style>
    .shop {
        padding: 3rem 5%;
    }

    .products {
        align-items: flex-start;
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr 260px;
        position: relative;
    }
</style>